<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="username"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:summary="@string/settings_username_resume"
        android:title="@string/settings_username" />
    <PreferenceCategory android:title="@string/settings_category_web_service">
        <ListPreference
            android:defaultValue="@string/settings_english"
            android:entries="@array/settings_languages"
            android:entryValues="@array/settings_languages"
            android:key="language"
            android:summary="@string/settings_language_resume"
            android:title="@string/settings_language" />
        <ListPreference
            android:defaultValue="@string/settings_get"
            android:entries="@array/settings_http"
            android:entryValues="@array/settings_http"
            android:key="http"
            android:summary="@string/settings_http_resume"
            android:title="@string/settings_http" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/settings_category_web_service">
        <ListPreference
            android:defaultValue="@string/sqlite_openhelper"
            android:entries="@array/db_type"
            android:entryValues="@array/db_type"
            android:key="db"
            android:summary="@string/settings_database_resume"
            android:title="@string/settings_database" />
    </PreferenceCategory>
</PreferenceScreen>