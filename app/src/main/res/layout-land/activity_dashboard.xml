<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_getQuotations"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="pulsarBoton"
        android:text="@string/get_quotations"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_favouriteQuotations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="pulsarBoton"
        android:text="@string/favorite_quotations"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_getQuotations"
        app:layout_constraintTop_toTopOf="@+id/btn_getQuotations" />

    <Button
        android:id="@+id/btn_settings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="pulsarBoton"
        android:text="@string/settings"
        app:layout_constraintEnd_toEndOf="@+id/btn_getQuotations"
        app:layout_constraintStart_toStartOf="@+id/btn_getQuotations"
        app:layout_constraintTop_toBottomOf="@+id/btn_getQuotations" />

    <Button
        android:id="@+id/btn_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="pulsarBoton"
        android:text="@string/about"
        app:layout_constraintEnd_toEndOf="@+id/btn_favouriteQuotations"
        app:layout_constraintStart_toStartOf="@+id/btn_favouriteQuotations"
        app:layout_constraintTop_toBottomOf="@+id/btn_favouriteQuotations" />
</androidx.constraintlayout.widget.ConstraintLayout>